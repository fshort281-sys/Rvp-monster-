    <script>
        (function() {
            // fixed credentials (exactly as requested)
            const VALID_LOGIN = "monstar";
            const VALID_PASS = "niki25";

            const loginInput = document.getElementById('loginName');
            const passInput = document.getElementById('loginPass');
            const accessBtn = document.getElementById('accessBtn');
            const grantedArea = document.getElementById('grantedArea');
            const loginPanel = document.getElementById('loginPanel');
            const toggleBtn = document.getElementById('togglePassBtn');

            // pre-fill values (already in html, but double ensure)
            loginInput.value = "monstar";
            passInput.value = "niki25";

            // toggle password visibility (optional)
            toggleBtn.addEventListener('click', function() {
                const type = passInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passInput.setAttribute('type', type);
                toggleBtn.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üîì';
            });

            // login function
            function attemptLogin() {
                const enteredLogin = loginInput.value.trim();
                const enteredPass = passInput.value;  // don't trim password (niki25 has no spaces)

                if (enteredLogin === VALID_LOGIN && enteredPass === VALID_PASS) {
                    grantedArea.classList.add('show');
                    // optional: small effect to login panel
                    loginPanel.style.opacity = '0.7';
                    loginPanel.style.transition = '0.3s';
                    // add an ephemeral success flash
                    const style = document.createElement('style');
                    style.innerHTML = `
                        .login-panel { border-color: #00ffff; box-shadow: 0 0 80px #00ffe0; }
                        .access-granted { animation: glitch-shake 0.2s 2; }
                    `;
                    document.head.appendChild(style);
                    setTimeout(() => style.remove(), 600);
                } else {
                    // incorrect ‚Äî glitch effect
                    loginPanel.style.borderColor = '#ff44ee';
                    loginPanel.style.boxShadow = '0 0 50px #ff00b3';
                    grantedArea.classList.remove('show');
                    
                    // shaking feedback
                    loginPanel.style.transform = 'translateX(-4px)';
                    setTimeout(() => loginPanel.style.transform = 'translateX(4px)', 50);
                    setTimeout(() => loginPanel.style.transform = 'translateX(-2px)', 100);
                    setTimeout(() => loginPanel.style.transform = 'translateX(2px)', 150);
                    setTimeout(() => loginPanel.style.transform = 'translateX(0)', 200);
                    
                    // reset border after 600ms
                    setTimeout(() => {
                        loginPanel.style.borderColor = '#26e6a4';
                        loginPanel.style.boxShadow = '0 0 30px #1affa04d, inset 0 0 10px #0a4d3b';
                    }, 600);
                    
                    // optional: tiny alert but not intrusive
                    const hint = document.querySelector('.cred-hint');
                    hint.style.color = '#ff99cc';
                    setTimeout(() => hint.style.color = '#83cfa7', 500);
                }
            }

            // click on INITIATE button
            accessBtn.addEventListener('click', attemptLogin);

            // allow Enter key on inputs
            loginInput.addEventListener('keydown', (e) => { if (e.key === 'Enter') attemptLogin(); });
            passInput.addEventListener('keydown', (e) => { if (e.key === 'Enter') attemptLogin(); });

            // also if user edits fields they can still go back, we keep granted hidden if wrong
            // but if they change after granted, we optionally hide granted (nice)
            loginInput.addEventListener('input', function() {
                if (grantedArea.classList.contains('show')) {
                    const currLogin = loginInput.value.trim();
                    const currPass = passInput.value;
                    if (currLogin !== VALID_LOGIN || currPass !== VALID_PASS) {
                        grantedArea.classList.remove('show');
                        loginPanel.style.opacity = '1';
                    }
                }
            });

            passInput.addEventListener('input', function() {
                if (grantedArea.classList.contains('show')) {
                    const currLogin = loginInput.value.trim();
                    const currPass = passInput.value;
                    if (currLogin !== VALID_LOGIN || currPass !== VALID_PASS) {
                        grantedArea.classList.remove('show');
                        loginPanel.style.opacity = '1';
                    }
                }
            });

            // initial: check if prefilled matches (they do), but we don't automatically show granted
            // wait for button click, that's more realistic.
            // but we can auto show? no, better keep as interactive demo: click to see magic.
            // However for promotion they might want instant display? we stay with click.
            // But we also include a tiny style to remind credentials.

            // Additional: if user wants quick preview, they just click.
            // make the reveal button fun

            // Also adjust the login panel to show default values clearly.
            // (done)

            // Add a little "auto-login" demo? but not needed. Use the click.
            // BUT double click on header? not necessary.

            // on load, we pre-highlight granted stays hidden until click.

            // make it clear that monstar / niki25 works (prefilled + hint)
        })();
    </script>

